<% if @user.nil? %>
  <p>There's no user with the ID of: <%= params[:user_id] %>.</p>
<% else %>
  <section class="layout-container layout-container-posts">
    <%= render partial: 'users/user', locals: { user: @user, name_as_link: true } %>
    <div class="posts">
      <%= render partial: 'users/post', collection: @user.all_posts, locals: { display_comments: true } %>
    </div>
    <%= link_to 'New Post', new_user_post_path(@user) %>
    <a href="#" class="btn">Pagination</a>
  </section>
<% end %>
